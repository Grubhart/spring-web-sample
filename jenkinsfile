pipeline {
    agent any
    environment {
        PROJECT_ID = 'testci20200723'
        CLUSTER_NAME = 'deployment'
        LOCATION = 'us-central1-b'
        CREDENTIALS_ID = 'testCI20200723'
        SERVICE_ACCOUNT = 'jenkins-service-account'
    }
    stages {
        stage("Checkout code") {
                    steps {
                        checkout scm
                    }
                }
                stage("Build code") {
                            steps {
                                sh("./gradlew clean bootjar")
                            }
                        }
    }
}
